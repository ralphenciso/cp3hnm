<% include ../partials/header %>


<form action="/lessons" method="POST" class="mt-4 w-50 mx-auto" id="newlessonform" enctype="multipart/form-data">
    <div class="input-group mb-2">
        <div class="input-group-prepend">
            <span class="input-group-text">Instrument</span>
        </div>
        <input type="text" class="form-control" name="instrument">
    </div>
    <div class="input-group mb-2">
        <div class="input-group-prepend">
            <span class="input-group-text">Image</span>
        </div>
        <input type="file" class="form-control" name="image">
    </div>



    <div class="lead mb-2 d-flex justify-content-center align-items-center">
        <strong class="ml-auto">Programs</strong>
        <i class="material-icons ml-auto" id="addprogram">add</i>
    </div>

    <div class="input-group mb-3 programinput">
        <div class="input-group-prepend">
            <span class="input-group-text">Name</span>
        </div>
        <input type="text" class="form-control w-50" name="pnames[]">
        <div class="input-group-prepend">
            <span class="input-group-text">Duration</span>
        </div>
        <input type="number" class="form-control" name="pduration[]" min=1>
        <div style="width:34px"></div>
    </div>
    
    <button class="btn btn-block btn-primary" id="submit">Add</button>

</form>

<script src="/scripts/addlesson.js"></script>

<% include ../partials/footer %>